<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="ApparelMakeableBase" Name="SLPPR_UpperwearBase" Abstract="True">
        <defName>SLPPR_UpperwearBase</defName>
        <label>upper body clothing</label>
        <description>A piece of clothing for what isn't the bottom of you.</description>
        <graphicData>
            <texPath>Things/Upperwear/Placeholder</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <displayPriority>225</displayPriority>
            <recipeUsers Inherit="False">
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
                <li>CraftingSpot</li>
            </recipeUsers>
            <researchPrerequisite>ComplexClothing</researchPrerequisite>
        </recipeMaker>
        <costStuffCount>65</costStuffCount>
        <techLevel>Neolithic</techLevel>
        <tradeability>Sellable</tradeability>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories Inherit="False">
            <li>SLPPR_TopAndBottom</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToMake>15000</WorkToMake>
            <Mass>0.75</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
           <!-- no base equipped state offsets -->
        </equippedStatOffsets>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Torso</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
            </layers>
            <tags>
                <li>IndustrialAdvanced</li>
            </tags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
            <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
        <comps>
            <li Class="SlippersNmSpc.CompProperties_DynamicApparelComps" />
        </comps>
        <tickerType>Rare</tickerType>
    </ThingDef>

    <ThingDef ParentName="SLPPR_UpperwearBase">
        <defName>SLPPR_Apparel_CeremonialCorset</defName>
        <label>ceremonial corset</label>
        <description>An ornate corset adorned with intricate patterns and expensive materials, designed to make a statement during social events.</description>
        <graphicData>
            <texPath>Things/Apparel/CeremonialCorset/CeremonialCorset</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.95</drawSize>

        </graphicData>
        <uiIconScale>1.4</uiIconScale>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>0.30</Mass>
            <MarketValue>300</MarketValue>
            <SocialImpact>0.3</SocialImpact>
            <EquipDelay>2</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <Comfort>0.1</Comfort>
            <SocialImpact>0.15</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/CeremonialCorset/CeremonialCorset</wornGraphicPath>
            <tags>
                <li>IndustrialAdvanced</li>
            </tags>
        </apparel>
        <modExtensions>
            <li Class="SlippersNmSpc.DynAppCompModExtension">
                <needSatisfiers>
                    <li>
                        <needDefName>ConstraintNeed</needDefName>
                        <satisfactionBaseContrib>0.2</satisfactionBaseContrib>
                        <satisfactionPerTick>0.001</satisfactionPerTick>
                    </li>
                    <li>
                        <needDefName>FormalityNeed</needDefName>
                        <satisfactionBaseContrib>0.4</satisfactionBaseContrib>
                        <satisfactionPerTick>0.002</satisfactionPerTick>
                    </li>
                </needSatisfiers>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="SLPPR_UpperwearBase">
        <defName>SLPPR_Apparel_DanceCorset</defName>
        <label>dance corset</label>
        <description>A flexible corset tailored for active movement, commonly worn during performances or social dances.</description>
        <graphicData>
            <!-- <texPath>Things/Apparel/DanceCorset/DanceCorset</texPath> -->
            <texPath>Things/Apparel/DanceCorset/DanceCorset</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
        <uiIconScale>1.1</uiIconScale>
        <statBases>
            <WorkToMake>9000</WorkToMake>
            <Mass>0.20</Mass>
            <SocialImpact>0.2</SocialImpact>
            <EquipDelay>2.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <Comfort>0.2</Comfort>
            <SocialImpact>0.1</SocialImpact>
            <MoveSpeed>0.05</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/DanceCorset/DanceCorset</wornGraphicPath>
            <tags>
                <li>Industrial</li>
            </tags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="SLPPR_UpperwearBase">
        <defName>SLPPR_Apparel_SafetyCorset</defName>
        <label>corset</label>
        <description>A reinforced corset suitable for every day use.</description>
        <graphicData>
            <!-- <texPath>Things/Apparel/SafetyCorset/SafetyCorset</texPath> -->
            <texPath>Things/Apparel/SafetyCorset/SafetyCorset</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <uiIconScale>1.3</uiIconScale>
        <statBases>
            <EquipDelay>1.8</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.25</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/SafetyCorset/SafetyCorset</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="SLPPR_UpperwearBase">
        <defName>SLPPR_Apparel_TrainingCorset</defName>
        <label>training corset</label>
        <description>A rigid garment which displaces the body's flesh and internal organs. It constrains, shapes and may cause fainting.</description>
        <graphicData>
            <texPath>Things/Apparel/TrainingCorset/TrainingCorset</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <uiIconScale>1.3</uiIconScale>
        <statBases>
            <EquipDelay>6</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <Comfort>-0.25</Comfort>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.25</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/TrainingCorset/TrainingCorset</wornGraphicPath>
        </apparel>
        <modExtensions>
            <li Class="SlippersNmSpc.DynAppCompModExtension">
                <needSatisfiers>
                    <li>
                        <needDefName>ConstraintNeed</needDefName>
                        <satisfactionBaseContrib>0.3</satisfactionBaseContrib>
                        <satisfactionPerTick>0.001885</satisfactionPerTick>
                        <!--
                        <requiredTags>
                            <li>Constraining</li>
                        </requiredTags>
                        -->
                    </li>
                </needSatisfiers>
            </li>
        </modExtensions>
    </ThingDef>
   
</Defs>